<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background_gradient"
    tools:context=".AddLocationActivity">

    <!-- ðŸ· Campo de texto para el nombre -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la fuente"
        android:inputType="text"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ“ Campo de texto para la descripciÃ³n -->
    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- ðŸ“¸ Imagen de previsualizaciÃ³n con borde -->
    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="299dp"
        android:layout_height="319dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/image_border"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDescription" />

    <!-- ðŸ“· BotÃ³n para seleccionar la foto -->
    <Button
        android:id="@+id/btnSelectPhoto"
        style="@style/ModernButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seleccionar Foto"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/ivPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"/>

    <!-- âœ… BotÃ³n para guardar la ubicaciÃ³n -->
    <Button
        android:id="@+id/btnSaveLocation"
        style="@style/ModernButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar UbicaciÃ³n"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnSelectPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:backgroundTint="@null"/>

    <!-- ðŸ“Œ Footer - InformaciÃ³n Adicional -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comparte y descubre fuentes en toda la ciudad."
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/primaryDarkColor"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
