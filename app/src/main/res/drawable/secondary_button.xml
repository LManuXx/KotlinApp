<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#81C784"/> <!-- Verde claro al presionar -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#388E3C"/> <!-- Borde más oscuro -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7"/> <!-- Verde más suave -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#66BB6A"/> <!-- Verde intermedio -->
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

</selector>
