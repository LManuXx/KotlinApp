<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDarkColor"/> <!-- Verde oscuro al presionar -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/primaryBorderColor"/> <!-- Verde más oscuro -->
            <padding android:left="12dp" android:right="12dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor"/> <!-- Verde oscuro suave -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/primaryBorderColor"/> <!-- Verde más oscuro -->
            <padding android:left="12dp" android:right="12dp"/>
        </shape>
    </item>

</selector>
