<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa del degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#E8F5E9"
                android:centerColor="#F1F8E9"
                android:endColor="#FFFFFF" 
                android:type="linear"/>
        </shape>
    </item>

    <!-- Capa de un sutil patrÃ³n de luz (opcional) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/> <!-- Transparente para dar un efecto de brillo -->
        </shape>
    </item>

</layer-list>
